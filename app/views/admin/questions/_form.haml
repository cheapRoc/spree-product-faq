- f.field_container :title do 
  = f.label :title, t("title")
  = f.text_field :title
  = f.error_message_on :title

- f.field_container :answer do
  = f.label :answer, t("answer")
  %br
  = f.text_area :answer
  = f.error_message_on :answer

- unless @object.new_record?
  %h2
    = t("ref_products")
  
  %ul.question-products
    - @products.each do |product|

      %li{ :id => dom_id(product) }
        = product.name.titlecase
        = check_box_tag "question[product_ids][]", product.id, @question.products.exists?(product)
